<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.futsalmate">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:icon="@drawable/ic_futsal_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/bg_circle_light"
        android:supportsRtl="true"
        android:theme="@style/Theme.FutsalMate"
        android:usesCleartextTraffic="true">

        <!-- Splash as launcher - ONLY this should be exported -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.FutsalMate">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login screen -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.FutsalMate" />

        <!-- SignUp screen -->
        <activity
            android:name=".SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.FutsalMate" />

        <!-- OTP Verification screen -->
        <activity
            android:name=".OtpVerificationActivity"
            android:exported="false"
            android:label="@string/title_activity_otp_verification"
            android:theme="@style/Theme.FutsalMate" />

        <!-- Dashboard screen -->
        <activity
            android:name=".DashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.FutsalMate"
            />

    </application>

</manifest>
