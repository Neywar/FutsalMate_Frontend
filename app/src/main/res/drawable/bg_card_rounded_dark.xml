<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Dark card background -->
    <solid android:color="#101827" />

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Optional light border -->
    <stroke
        android:width="0.5dp"
        android:color="#1F2933" />

    <!-- Inner padding so content is not against the edges -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp" />
</shape>
