<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (Vendor theme). -->
    <style name="Theme.FutsalMate" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color: vendor bright green -->
        <item name="colorPrimary">@color/bright_green</item>
        <item name="colorPrimaryVariant">@color/brand_green</item>
        <item name="colorOnPrimary">@color/dashboard_bg</item>

        <!-- Secondary brand color: vendor action yellow -->
        <item name="colorSecondary">@color/action_yellow</item>
        <item name="colorSecondaryVariant">@color/action_grey</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- App background matches vendor dashboard -->
        <item name="android:colorBackground">@color/dashboard_bg</item>

        <!-- Disable default action bar/title -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Style for the PopupMenu background -->
    <style name="DarkPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/card_bg</item>
    </style>

    <!-- Theme for the PopupMenu content (text color, etc) -->
    <style name="DarkPopupMenuTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">@color/white</item>
        <item name="android:itemBackground">@color/card_bg</item>
    </style>
</resources>