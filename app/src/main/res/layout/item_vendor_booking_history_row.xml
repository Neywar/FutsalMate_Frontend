<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvRowDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OCT 26\n6:00 PM"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvRowCourt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Pitch A"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tvRowAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:text="Rs.0"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvRowMethod"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="ONLINE"
        android:textColor="@color/white"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tvRowStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_vendor_button"
        android:paddingHorizontal="10dp"
        android:paddingVertical="3dp"
        android:text="PAID"
        android:textColor="#000000"
        android:textSize="9sp"
        android:textStyle="bold" />

</LinearLayout>

