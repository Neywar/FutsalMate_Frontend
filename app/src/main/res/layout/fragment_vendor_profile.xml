<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp">

            <!-- Top Back Button -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="16dp"
                android:background="@drawable/bg_circle_light"
                android:backgroundTint="#80000000"
                android:contentDescription="@string/back_button"
                android:padding="12dp"
                android:src="@drawable/ic_arrow_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <!-- Profile Image -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivArenaLogo"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="40dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_futsal_logo"
                app:civ_border_color="#FACC15"
                app:civ_border_width="4dp"
                app:civ_circle_background_color="#F3F4F6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnBack" />

            <!-- Title and Verified -->
            <TextView
                android:id="@+id/tvVendorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawableEnd="@drawable/ic_verified"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="ELITE FUTSAL\nARENA"
                android:textColor="#FACC15"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivArenaLogo" />

            <!-- Business Details Card -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_vendor_card"
                android:padding="20dp"
                app:layout_constraintTop_toBottomOf="@id/tvVendorName">

                <!-- Address -->
                <FrameLayout
                    android:id="@+id/boxLoc"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_vendor_input"
                    android:backgroundTint="#111827"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:contentDescription="Address icon"
                        android:src="@drawable/ic_location"
                        app:tint="#FACC15" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/boxLoc"
                    app:layout_constraintTop_toTopOf="@id/boxLoc" />

                <!-- Phone -->
                <FrameLayout
                    android:id="@+id/boxPhone"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/bg_vendor_input"
                    android:backgroundTint="#111827"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/boxLoc">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:contentDescription="Phone icon"
                        android:src="@drawable/ic_phone"
                        app:tint="#FACC15" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tvVendorPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/boxPhone"
                    app:layout_constraintStart_toEndOf="@id/boxPhone"
                    app:layout_constraintTop_toTopOf="@id/boxPhone" />

                <!-- Email -->
                <FrameLayout
                    android:id="@+id/boxEmail"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/bg_vendor_input"
                    android:backgroundTint="#111827"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/boxPhone">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:contentDescription="Email icon"
                        android:src="@drawable/ic_email"
                        app:tint="#FACC15" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tvVendorEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/boxEmail"
                    app:layout_constraintStart_toEndOf="@id/boxEmail"
                    app:layout_constraintTop_toTopOf="@id/boxEmail" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Operational Hours Section -->
            <RelativeLayout
                android:id="@+id/rlHoursHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/cardDetails">




            </RelativeLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:id="@+id/llHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="4dp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/rlHoursHeader">

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditBlockedUsers"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginHorizontal="24dp"
                android:backgroundTint="#FACC15"
                android:text="@string/blocked_users"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textStyle="bold"
                app:cornerRadius="16dp"
                app:iconGravity="textStart"
                app:iconTint="#000000"
                app:layout_constraintTop_toBottomOf="@id/llHours" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditFacility"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="64dp"
                android:backgroundTint="#FACC15"
                android:text="@string/edit_profile"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textStyle="bold"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_edit"
                app:iconGravity="textStart"
                app:iconPadding="16dp"
                app:iconTint="#000000"
                app:layout_constraintTop_toBottomOf="@id/llHours" />

            <LinearLayout
                android:id="@+id/llActionsGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/btnEditFacility">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPayouts"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/payouts"
                    android:textColor="#FACC15"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_wallet"
                    app:iconGravity="top"
                    app:iconPadding="8dp"
                    app:iconTint="#FACC15"
                    app:strokeColor="#1F2937" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStatistics"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/statistics"
                    android:textColor="#FACC15"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_transaction"
                    app:iconGravity="top"
                    app:iconPadding="8dp"
                    app:iconTint="#FACC15"
                    app:strokeColor="#1F2937" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="12dp"
                android:text="@string/log_out"
                android:textAllCaps="true"
                android:textColor="#EF4444"
                android:textStyle="bold"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_lock"
                app:iconGravity="textStart"
                app:iconPadding="16dp"
                app:iconTint="#EF4444"
                app:layout_constraintTop_toBottomOf="@id/llActionsGrid"
                app:strokeColor="#1F2937" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
