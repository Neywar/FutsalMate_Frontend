<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivUserIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle_light"
            android:backgroundTint="#1F2937"
            android:padding="10dp"
            android:src="@drawable/ic_person"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#FACC15" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MY COURTS"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            app:layout_constraintBottom_toBottomOf="@id/ivUserIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivUserIcon" />

        <ImageView
            android:id="@+id/btnSearch"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            app:layout_constraintBottom_toBottomOf="@id/ivUserIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivUserIcon"
            app:tint="#FACC15" />

        <!-- Search Box (Hidden by default) -->
        <LinearLayout
            android:id="@+id/searchContainer"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_vendor_card"
            android:backgroundTint="#1F2937"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/ivUserIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivUserIcon"
            app:layout_constraintTop_toTopOf="@id/ivUserIcon">

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Search courts..."
                android:textColor="@color/white"
                android:textColorHint="#9CA3AF"
                android:textSize="14sp"
                android:maxLines="1"
                android:inputType="text"/>

            <ImageView
                android:id="@+id/btnCloseSearch"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_close"
                app:tint="#9CA3AF" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Filters -->
    <LinearLayout
        android:id="@+id/filtersContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/header">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_vendor_button"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="All Courts"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_vendor_card"
            android:backgroundTint="#1F2937"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="Active"
            android:textColor="#9CA3AF"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_vendor_card"
            android:backgroundTint="#1F2937"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="Maintenance"
            android:textColor="#9CA3AF"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filtersContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Court Card 1 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCourt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#111827"
                app:cardCornerRadius="20dp"
                app:strokeColor="#1F2937"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivCourt1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_court_one"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearanceOverlay="@style/RoundedImageView" />

                    <TextView
                        android:id="@+id/tvStatus1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/bg_vendor_input"
                        android:backgroundTint="#40FACC15"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:text="ACTIVE"
                        android:textColor="#FACC15"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/ivCourt1"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvCourtName1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Stadium A - Pro Indoor"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/ivEdit1"
                        app:layout_constraintStart_toStartOf="@id/tvStatus1"
                        app:layout_constraintTop_toBottomOf="@id/tvStatus1" />

                    <TextView
                        android:id="@+id/tvFeatures1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Parquet Surface • Premium Lighting"
                        android:textColor="#9CA3AF"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tvStatus1"
                        app:layout_constraintTop_toBottomOf="@id/tvCourtName1" />

                    <LinearLayout
                        android:id="@+id/llAvailability1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        app:layout_constraintStart_toStartOf="@id/tvStatus1"
                        app:layout_constraintTop_toBottomOf="@id/tvFeatures1">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_clock"
                            app:tint="#FACC15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="06:00 AM - 11:00 PM"
                            android:textColor="#FACC15"
                            android:textSize="11sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvPrice1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="$50.00 / hr"
                        android:textColor="#FACC15"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@id/tvStatus1"
                        app:layout_constraintTop_toBottomOf="@id/llAvailability1" />

                    <ImageView
                        android:id="@+id/ivEdit1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_edit"
                        app:layout_constraintEnd_toStartOf="@id/ivDelete1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="#9CA3AF" />

                    <ImageView
                        android:id="@+id/ivDelete1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_delete"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="#9CA3AF" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Court Card 2 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCourt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#111827"
                app:cardCornerRadius="20dp"
                app:strokeColor="#1F2937"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivCourt2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_court_one"
                        android:alpha="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearanceOverlay="@style/RoundedImageView" />

                    <TextView
                        android:id="@+id/tvStatus2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/bg_vendor_input"
                        android:backgroundTint="#1F2937"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:text="MAINTENANCE"
                        android:textColor="#9CA3AF"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/ivCourt2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvCourtName2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Stadium B - Sunset Turf"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/ivEdit2"
                        app:layout_constraintStart_toStartOf="@id/tvStatus2"
                        app:layout_constraintTop_toBottomOf="@id/tvStatus2" />

                    <TextView
                        android:id="@+id/tvFeatures2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Turf Surface • Outdoor Deck"
                        android:textColor="#9CA3AF"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tvStatus2"
                        app:layout_constraintTop_toBottomOf="@id/tvCourtName2" />

                    <LinearLayout
                        android:id="@+id/llAvailability2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        app:layout_constraintStart_toStartOf="@id/tvStatus2"
                        app:layout_constraintTop_toBottomOf="@id/tvFeatures2">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_clock"
                            app:tint="#9CA3AF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="08:00 AM - 10:00 PM"
                            android:textColor="#9CA3AF"
                            android:textSize="11sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvPrice2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="$40.00 / hr"
                        android:textColor="#FACC15"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@id/tvStatus2"
                        app:layout_constraintTop_toBottomOf="@id/llAvailability2" />

                    <ImageView
                        android:id="@+id/ivEdit2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_edit"
                        app:layout_constraintEnd_toStartOf="@id/ivDelete2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="#9CA3AF" />

                    <ImageView
                        android:id="@+id/ivDelete2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_delete"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="#9CA3AF" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Court Card 3 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCourt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#111827"
                app:cardCornerRadius="20dp"
                app:strokeColor="#1F2937"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivCourt3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_court_one"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearanceOverlay="@style/RoundedImageView" />

                    <TextView
                        android:id="@+id/tvStatus3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/bg_vendor_input"
                        android:backgroundTint="#40FACC15"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:text="ACTIVE"
                        android:textColor="#FACC15"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/ivCourt3"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvCourtName3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Central Arena - Court 3"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/ivEdit3"
                        app:layout_constraintStart_toStartOf="@id/tvStatus3"
                        app:layout_constraintTop_toBottomOf="@id/tvStatus3" />

                    <TextView
                        android:id="@+id/tvFeatures3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Rubberized Surface • Climate Control"
                        android:textColor="#9CA3AF"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tvStatus3"
                        app:layout_constraintTop_toBottomOf="@id/tvCourtName3" />

                    <LinearLayout
                        android:id="@+id/llAvailability3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        app:layout_constraintStart_toStartOf="@id/tvStatus3"
                        app:layout_constraintTop_toBottomOf="@id/tvFeatures3">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_clock"
                            app:tint="#FACC15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="07:00 AM - 12:00 AM"
                            android:textColor="#FACC15"
                            android:textSize="11sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvPrice3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="$55.00 / hr"
                        android:textColor="#FACC15"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@id/tvStatus3"
                        app:layout_constraintTop_toBottomOf="@id/llAvailability3" />

                    <ImageView
                        android:id="@+id/ivEdit3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_edit"
                        app:layout_constraintEnd_toStartOf="@id/ivDelete3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="#9CA3AF" />

                    <ImageView
                        android:id="@+id/ivDelete3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_delete"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="#9CA3AF" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- FAB Add Court -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddCourt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="#FACC15"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="#000000" />

</androidx.constraintlayout.widget.ConstraintLayout>
