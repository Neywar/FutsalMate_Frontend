<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vendorBottomNavContainer"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="#111827">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/nav_vendor_dashboard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/iv_nav_vendor_dashboard"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                app:tint="@color/text_grey" />

            <TextView
                android:id="@+id/tv_nav_vendor_dashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Dashboard"
                android:textColor="@color/text_grey"
                android:textSize="9sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_vendor_bookings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/iv_nav_vendor_bookings"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_bookings"
                app:tint="@color/text_grey" />

            <TextView
                android:id="@+id/tv_nav_vendor_bookings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Bookings"
                android:textColor="@color/text_grey"
                android:textSize="9sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_vendor_courts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/iv_nav_vendor_courts"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_courts"
                app:tint="@color/text_grey" />

            <TextView
                android:id="@+id/tv_nav_vendor_courts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Courts"
                android:textColor="@color/text_grey"
                android:textSize="9sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_vendor_users"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/iv_nav_vendor_users"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_person"
                app:tint="@color/text_grey" />

            <TextView
                android:id="@+id/tv_nav_vendor_users"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Users"
                android:textColor="@color/text_grey"
                android:textSize="9sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_vendor_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/iv_nav_vendor_profile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile"
                app:tint="@color/text_grey" />

            <TextView
                android:id="@+id/tv_nav_vendor_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Profile"
                android:textColor="@color/text_grey"
                android:textSize="9sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>