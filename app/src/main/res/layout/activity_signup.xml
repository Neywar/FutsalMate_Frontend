<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Back arrow -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back" />

        <!-- Top circle logo -->
        <LinearLayout
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgBall"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_futsal_logo" />
        </LinearLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:text="Create Account"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#111827" />

        <TextView
            android:id="@+id/txtSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:text="Book your next match in seconds."
            android:textSize="14sp"
            android:textColor="#6B7280" />

        <!-- Full Name -->
        <TextView
            android:id="@+id/labelFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Full Name"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#111827" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <EditText
                android:id="@+id/edtFullName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Futsal Player"
                android:inputType="textPersonName"
                android:textColor="#111827"
                android:textColorHint="#9CA3AF"
                android:padding="0dp" />

            <ImageView
                android:id="@+id/iconName"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_person" />
        </LinearLayout>

        <!-- Email Address -->
        <TextView
            android:id="@+id/labelEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Email Address"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#111827" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="abc.xyz@examlpe.com"
                android:inputType="textEmailAddress"
                android:textColor="#111827"
                android:textColorHint="#9CA3AF"
                android:padding="0dp" />

            <ImageView
                android:id="@+id/iconEmail"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_email"/>
        </LinearLayout>

        <!-- Password -->
        <TextView
            android:id="@+id/labelPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Password"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#111827" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="••••••••"
                android:inputType="textPassword"
                android:textColor="#111827"
                android:textColorHint="#9CA3AF"
                android:padding="0dp" />

            <ImageView
                android:id="@+id/iconPasswordToggle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_visibility"/>
        </LinearLayout>

        <!-- Confirm Password -->
        <TextView
            android:id="@+id/labelConfirmPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Confirm Password"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#111827" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <EditText
                android:id="@+id/edtConfirmPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="••••••••"
                android:inputType="textPassword"
                android:textColor="#111827"
                android:textColorHint="#9CA3AF"
                android:padding="0dp" />

            <ImageView
                android:id="@+id/iconConfirmPasswordToggle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_visibility"/>
        </LinearLayout>

        <!-- Sign Up button -->
        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:text="Sign Up"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#10B981" />

        <!-- Log In text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtHaveAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? "
                android:textSize="12sp"
                android:textColor="#6B7280" />

            <TextView
                android:id="@+id/txtLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log In"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#10B981" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
