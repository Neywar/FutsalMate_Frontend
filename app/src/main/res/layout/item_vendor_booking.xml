<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="720dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingVertical="12dp">

    <TextView
        android:id="@+id/tvBookingTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:text="09:00 - 10:00"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvBookingUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alex Rivera"
            android:textColor="#FACC15"
            android:textSize="13sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvBookingPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1 234 567 890"
            android:textColor="#4B5563"
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvBookingCourt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Court A"
        android:textColor="#FACC15"
        android:textSize="12sp" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:paddingVertical="4dp">

        <FrameLayout
            android:id="@+id/bookingStatusContainer"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_status_circle"
            android:backgroundTint="#40FACC15">

            <ImageView
                android:id="@+id/ivBookingStatus"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:contentDescription="Booking status"
                android:src="@drawable/ic_hourglass"
                app:tint="#FACC15" />
        </FrameLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/tvBookingPaymentStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:background="@drawable/bg_vendor_input"
        android:backgroundTint="#40FACC15"
        android:gravity="center"
        android:paddingVertical="4dp"
        android:text="PENDING"
        android:textColor="#FACC15"
        android:textSize="9sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/actionLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnBookingActions"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_circle_light"
            android:contentDescription="Booking actions"
            android:src="@drawable/ic_more_vert"
            app:tint="@color/white" />

    </LinearLayout>

</LinearLayout>
