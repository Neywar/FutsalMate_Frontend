<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dashboard_bg">

    <!-- Top Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="24dp">

            <!-- Profile Image Edit -->
            <FrameLayout
                android:id="@+id/layoutProfileImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivEditAvatar"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/ic_1"
                    app:civ_border_color="@color/bright_green"
                    app:civ_border_width="2dp" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnChangePhoto"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|end"
                    app:cardBackgroundColor="@color/bright_green"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_camera"
                        app:tint="@color/dashboard_bg" />
                </com.google.android.material.card.MaterialCardView>
            </FrameLayout>

            <!-- Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="@string/full_name_caps"
                android:textColor="@color/bright_green"
                android:textSize="10sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"/>

            <EditText
                android:id="@+id/etEditName"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:autofillHints="name"
                android:background="@drawable/bg_otp_box_inactive"
                android:backgroundTint="@color/card_bg"
                android:hint="@string/enter_name"
                android:paddingHorizontal="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/text_grey"
                android:textSize="14sp" />

            <!-- Phone Number -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="PHONE NUMBER"
                android:textColor="@color/bright_green"
                android:textSize="10sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"/>

            <EditText
                android:id="@+id/etEditPhone"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:autofillHints="phone"
                android:background="@drawable/bg_otp_box_inactive"
                android:backgroundTint="@color/card_bg"
                android:hint="98xxxxxxxx"
                android:inputType="phone"
                android:paddingHorizontal="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/text_grey"
                android:textSize="14sp" />

            <!-- Email (Read Only maybe?) -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="EMAIL ADDRESS"
                android:textColor="@color/bright_green"
                android:textSize="10sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"/>

            <EditText
                android:id="@+id/etEditEmail"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/bg_otp_box_inactive"
                android:backgroundTint="@color/card_bg"
                android:enabled="false"
                android:alpha="0.6"
                android:paddingHorizontal="16dp"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveProfile"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="48dp"
                android:backgroundTint="@color/bright_green"
                android:text="Save Changes"
                android:textAllCaps="false"
                android:textColor="@color/dashboard_bg"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="16dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
